@model HotelReservationViewModel

@{
    ViewData["Title"] = "Edit Reservation";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="col-md-6">
    <form class="d-flex row justify-content-center" id="registerForm" method="post" asp-area="Administration" asp-controller="HotelReservations" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating mt-1">
            <input type="number" asp-for="Price" class="form-control" autocomplete="endday" aria-required="true" />
            <label asp-for="Price"></label>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input type="date" asp-for="StartDay" class="form-control" autocomplete="startday" aria-required="true" />
            <label asp-for="StartDay"></label>
            <span asp-validation-for="StartDay" class="text-danger"></span>
        </div>
        <div class="form-floating mt-1">
            <input type="date" asp-for="EndDay" class="form-control" autocomplete="endday" aria-required="true" />
            <label asp-for="EndDay"></label>
            <span asp-validation-for="EndDay" class="text-danger"></span>
        </div>
        <button id="registerSubmit" type="submit" class="w-100 mt-3 btn btn-lg btn-primary">Edit</button>
    </form>
</div>