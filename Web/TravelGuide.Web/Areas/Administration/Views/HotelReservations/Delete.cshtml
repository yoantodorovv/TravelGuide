@model HotelReservationViewModel

@{
    ViewData["Title"] = "Delete this hotel reservation";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="d-flex justify-content-center flex-column">
    <div class="d-flex justify-content-center">
        <p><strong>Price:</strong> $0,00 - $@Model.Price.ToString("f2")</p>
    </div>
    <div class="d-flex justify-content-center">
        <p><strong>StartDay:</strong> @Model.StartDay</p>
    </div>
    <div class="d-flex justify-content-center">
        <p><strong>EndDay:</strong> @Model.EndDay</p>
    </div>
    <div class="d-flex justify-content-center">
        <p><strong>User:</strong> @Model.User.UserName</p>
    </div>
    <div class="d-flex justify-content-center">
        <p><strong>For Hotel:</strong> @Model.Hotel.Name</p>
    </div>
</div>
<form method="post" class="d-flex justify-content-center">
    <button type="submit" asp-area="Administration" asp-controller="HotelReservations" asp-action="Delete" class="btn btn-danger w-25">Delete</button>
</form>