@model RestaurantIndexViewModel

<div class="col">
    <div class="card">
        <img src=@Model.ImageUrl class="card-img-top" alt="Hollywood Sign on The Hill" />
        <div class="card-body">
            <h5>@Model.Name</h5>
            <hr />
            <p class="card-text">
                <strong>Location:</strong> @Model.Location, @Model.Country
                <br />
                <strong>Rating:</strong> @Model.Rating.ToString("f1")
                <br />
                <strong>Price:</strong> @Model.PriceRange
                <br />
                <strong>Today:</strong> @(Model.WorkingHours.Select(x => x.WorkingHours).FirstOrDefault(wh => wh.Text == DateTime.UtcNow.DayOfWeek.ToString()).RegistrationTime / 60):00 - @(Model.WorkingHours.Select(x => x.WorkingHours).FirstOrDefault(wh => wh.Text == DateTime.UtcNow.DayOfWeek.ToString()).LeaveTime / 60):00
            </p>
            <button type="submit" asp-area="Restaurant" asp-controller="Restaurant" asp-action="" asp-route-id=@Model.Id class="btn btn-primary">View More</button>
        </div>
    </div>
</div>