@model HotelPagingViewModel

<div class="col mt-5">
    <div class="card">
        <img src="@Model.ImageUrl" class="card-img-top" />
        <div class="card-body">
            <h5><a class="text-decoration-none text-body" asp-controller="Hotel" asp-action="ById" asp-route-id="@Model.Id">@Model.Name</a></h5>
            <hr />
            <p class="card-text">
                <strong>Location:</strong> @Model.Location, @Model.Country
                <br />
                <strong>Rating:</strong> @Model.Rating.ToString("f1")
                <br />
                <strong>Price:</strong> $0,00 - $@Model.Price.ToString("f2")
            </p>
            <a type="button" asp-controller="Hotel" asp-action="ById" asp-route-id=@Model.Id class="btn btn-primary">View More</a>
        </div>
    </div>
</div>