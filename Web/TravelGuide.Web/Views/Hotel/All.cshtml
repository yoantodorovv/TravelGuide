@model AllHotelsViewModel

@{
    this.ViewData["Title"] = "All Hotels";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>
<hr />
<div>
    <h3>Page @Model.PageNumber</h3>
    <div class="row row-cols-1 row-cols-md-3">
        @foreach (var hotel in Model.Hotels)
            {
            <div class="col mt-5">
                <div class="card">
                    <img src="@hotel.ImageUrl" class="card-img-top" />
                    <div class="card-body">
                        <h5>@hotel.Name</h5>
                        <hr />
                        <p class="card-text">
                            <strong>Location:</strong> @hotel.Location, @hotel.Country
                            <br />
                            <strong>Rating:</strong> @hotel.Rating.ToString("f1")
                            <br />
                            <strong>Price:</strong> $0,00 - $@hotel.Price.ToString("f2")
                        </p>
                        <button type="submit" asp-area="Hotel" asp-controller="Hotel" asp-action="" asp-route-id=@hotel.Id class="btn btn-primary">View More</button>
                    </div>
                </div>
            </div>
            }
    </div>
</div>
<hr />
<partial name="_PagingPartial" model="@Model"/>