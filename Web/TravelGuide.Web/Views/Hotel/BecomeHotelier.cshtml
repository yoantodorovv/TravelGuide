@model BecomeHotelierViewModel

@using TravelGuide.Common

@{
    this.ViewData["Title"] = "Hotel Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName's Hoteliers community! Become a part of it by just sending a request to us!</h1>
</div>
<hr />
<form method="post" asp-controller="Hotel" asp-action="BecomeHotelier">
    <div class="form-floating">
        <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="@Model.Email"></label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <button id="registerSubmit" type="submit" class="mt-3 btn btn-lg btn-primary">Request</button>
</form>