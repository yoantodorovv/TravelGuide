@model HotelViewModel

@{
    this.ViewData["Title"] = Model.Name;
    bool first = true;
}

<div>
    <div>
        <h1>@Model.Name</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            <h1>@Model.AddressAddressText, @Model.AddressTownName, @Model.AddressCountry</h1>
        </div>
        <div class="col">
            <h1>Rating: @Model.Rating</h1>
        </div>
    </div>
    <div class="mb-5"></div>
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @foreach (var image in Model.Images)
            {
                <div class="carousel-item @(first ? "active" : string.Empty)">
                    <img class="d-block w-100" style="height:500px"
                         src="@image.ImageUrl" alt="image">
                </div>

                first = false;
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <hr />
    <div class="d-flex justify-content-around">
        <div class="d-flex flex-column align-items-center shadow-lg p-3 mb-5 bg-body rounded w-50">
            <h2>Details</h2>
            <hr />
            <p>@Model.Details</p>
        </div>
        <div class="d-flex flex-column align-items-center shadow-lg p-3 mb-5 bg-body rounded w-50">
            <h2>Amenities</h2>
            <hr />
            @foreach (var amenity in Model.Amenities)
            {
                <p>@amenity.AmenityTitle</p>
            }
        </div>
    </div>
</div>