@model HotelViewModel

@{
    ViewData["Title"] = "Create a new hotel";
}

<div class="d-flex row justify-content-center">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />
    <div class="col-md-4">
        <form id="registerForm" method="post" asp-controller="Hotel" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Name" class="form-control" autocomplete="firstname" aria-required="true" />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="lastname" aria-required="true" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Location" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Location"></label>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Town" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Town"></label>
                <span asp-validation-for="Town" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Country" class="form-control" autocomplete="date-of-birth" aria-required="true" />
                <label asp-for="Country"></label>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Address" class="form-control" autocomplete="date-of-birth" aria-required="true" />
                <label asp-for="Address"></label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Rating" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Rating"></label>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea asp-for="Details" class="form-control" autocomplete="new-password" aria-required="true"></textarea>
                <label asp-for="Details"></label>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="PhoneNumber" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="WebsiteUrl" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="WebsiteUrl"></label>
                <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Amenities" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Amenities"></label>
                <span asp-validation-for="Amenities" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Images" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Images"></label>
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="WorkingHours" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="WorkingHours"></label>
                <span asp-validation-for="WorkingHours" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="mt-3 btn btn-lg btn-primary">Create</button>
        </form>
    </div>
</div>