@model CreateHotelViewModel

@{
    ViewData["Title"] = "Create a new hotel";
}

<div class="d-flex row justify-content-center">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />
    <div class="col-md-4">
        <form id="registerForm" method="post" asp-controller="Hotel" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input type="text" asp-for="Name" class="form-control" autocomplete="name" aria-required="true" />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="email" asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="number" asp-for="Price" class="form-control" autocomplete="price" aria-required="true" />
                <label asp-for="Price"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="text" asp-for="Location" class="form-control" autocomplete="location" aria-required="true" />
                <label asp-for="Location"></label>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="text" asp-for="AddressTownName" class="form-control" autocomplete="address-town-name" aria-required="true" />
                <label asp-for="AddressTownName"></label>
                <span asp-validation-for="AddressTownName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="text" asp-for="AddressCountry" class="form-control" autocomplete="address-country" aria-required="true" />
                <label asp-for="AddressCountry"></label>
                <span asp-validation-for="AddressCountry" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="text" asp-for="AddressAddressText" class="form-control" autocomplete="address-address-text" aria-required="true" />
                <label asp-for="AddressAddressText"></label>
                <span asp-validation-for="AddressAddressText" class="text-danger"></span>
            </div>
            <select class="form-select" asp-for="Rating" aria-label="Default select example">
                <option selected>Select Rating</option>
                <option value="1">1 (One)</option>
                <option value="2">2 (Two)</option>
                <option value="3">3 (Three)</option>
                <option value="4">4 (Four)</option>
                <option value="5">5 (Five)</option>
            </select>
            <div class="form-floating">
                <textarea type="text" asp-for="Details" class="form-control" autocomplete="details" aria-required="true" rows="4"></textarea>
                <label asp-for="Details"></label>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="tel" asp-for="PhoneNumber" class="form-control" autocomplete="phone-number" aria-required="true" />
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="url" asp-for="WebsiteUrl" class="form-control" autocomplete="website-url" aria-required="true" />
                <label asp-for="WebsiteUrl"></label>
                <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
            </div>
            <!-- TODO: Reform Amenities, Working Hours and Images-->
            <!-- Add image from computer or URL-->
            <!--<div class="form-floating">
                <input asp-for="Images" class="form-control" autocomplete="images" aria-required="true" />
                <label asp-for="Images"></label>
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>-->
            <!-- Add as many amenities as one likes like evernote tags /Pool(x), Spa(x), .../-->
            <div class="form-floating">
                <input type="text" asp-for="AmenityTitle" class="form-control" autocomplete="amenity-title" aria-required="true" />
                <label asp-for="AmenityTitle"></label>
                <span asp-validation-for="AmenityTitle" class="text-danger"></span>
            </div>
            <!-- There will be a filed with all weekdays and one just has to write the opening time and the closing time (just like in calendar)-->
            <div class="form-floating">
                <input type="number" asp-for="WorkingHoursOpenTime" class="form-control" autocomplete="open-time" aria-required="true" />
                <label asp-for="WorkingHoursOpenTime"></label>
                <span asp-validation-for="WorkingHoursOpenTime" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="number" asp-for="WorkingHoursCloseTime" class="form-control" autocomplete="close-time" aria-required="true" />
                <label asp-for="WorkingHoursCloseTime"></label>
                <span asp-validation-for="WorkingHoursCloseTime" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="mt-3 btn btn-lg btn-primary">Create</button>
        </form>
    </div>
</div>