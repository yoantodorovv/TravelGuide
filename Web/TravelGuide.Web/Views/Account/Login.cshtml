@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex row justify-content-center">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />
    <div class="col-md-4" >
        <form id="loginForm" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="UsernameOrEmailField" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="UsernameOrEmailField"></label>
                <span asp-validation-for="UsernameOrEmailField" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="mt-3 btn btn-lg btn-primary">Login</button>
